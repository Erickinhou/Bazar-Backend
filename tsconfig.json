{
  "compilerOptions": {
    "baseUrl": "./src",
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "paths": {
      "@config/*": ["config/*"],
      "@controller/*": ["controller/*"],
      "@entity/*": ["entity/*"],
      "@repository/*": ["repository/*"]
    }
  },
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": ["tsconfig-paths/register"]
  }
}
